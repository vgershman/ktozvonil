<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="8dp">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/result_top"
                     android:visibility="visible">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="12dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/searchNumber"
                          android:textColor="#333"
                          android:textSize="28sp"
                          android:textStyle="normal"
                          android:text="+79299945131"
                          android:layout_gravity="center"
                          android:layout_marginTop="16dp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#b8bbc0"
                          android:textSize="12sp"
                          android:textStyle="normal"
                          android:text="ПОСЛЕДНИЙ ВЫЗОВ"
                          android:layout_marginTop="8dp"/>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_marginTop="2dp">
                    <ImageView android:layout_width="25dp"
                               android:layout_height="wrap_content"
                               android:id="@+id/lastCallType"
                               android:scaleType="fitCenter"
                               android:adjustViewBounds="true"
                               android:src="@drawable/ic_call_in"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:id="@+id/lastCallTime"
                              android:layout_gravity="center_vertical"
                              android:textColor="#697384"
                              android:textSize="16sp"
                              android:textStyle="normal"
                              android:text="13 декабря 2012 в 11:32"
                              android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <FrameLayout android:id="@+id/addContactButton"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:clickable="true"
                             android:background="@drawable/share_button_state"
                             android:layout_marginTop="16dp"
                             android:layout_marginBottom="8dp">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_gravity="center">
                        <ImageView android:src="@drawable/ic_share"
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:scaleType="fitCenter"
                                   android:adjustViewBounds="true"
                                   android:layout_gravity="center"/>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:id="@+id/searchNumber"
                                  android:textColor="#697384"
                                  android:textSize="16sp"
                                  android:textStyle="normal"
                                  android:text="Добавить в контакты"
                                  android:layout_gravity="center"
                                  android:layout_marginLeft="3dp"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="2px"
                     android:background="@drawable/call_list_divider"/>
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/background_white_cropped"
                     android:visibility="visible"
                     android:padding="12dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_marginTop="8dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#b8bbc0"
                              android:textSize="12sp"
                              android:textStyle="normal"
                              android:text="АДРЕС"
                              android:layout_marginTop="8dp"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#333"
                              android:textSize="16sp"
                              android:textStyle="normal"
                              android:text="223423, Россия, Москва, ул. Шоссе Энтузиастов, д.34, стр.2, корп.4, кв.5"
                              android:layout_marginTop="0dp"
                              android:id="@+id/addressInfo"/>
                    <FrameLayout android:id="@+id/showMapButton"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:clickable="true"
                                 android:background="@drawable/share_button_state"
                                 android:layout_marginTop="8dp">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:layout_gravity="center">
                            <ImageView android:src="@drawable/ic_pin"
                                       android:layout_width="wrap_content"
                                       android:layout_height="match_parent"
                                       android:scaleType="fitCenter"
                                       android:adjustViewBounds="true"
                                       android:layout_gravity="center"/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:id="@+id/searchNumber"
                                      android:textColor="#697384"
                                      android:textSize="16sp"
                                      android:textStyle="normal"
                                      android:text="Показать на карте"
                                      android:layout_gravity="center"
                                      android:layout_marginLeft="3dp"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_marginTop="8dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#b8bbc0"
                              android:textSize="12sp"
                              android:textStyle="normal"
                              android:text="ВЛАДЕЛЕЦ НОМЕРА"
                              android:layout_marginTop="8dp"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#333"
                              android:textSize="16sp"
                              android:textStyle="normal"
                              android:text="ТЦ 'Совенок на водном идите все нафиг'"
                              android:layout_marginTop="0dp"
                              android:id="@+id/ownerInfo"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#697384"
                              android:textSize="12sp"
                              android:textStyle="normal"
                              android:text="Детские магазины, Магазины обуви"
                              android:layout_marginTop="0dp"
                              android:id="@+id/ownerType"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_marginTop="8dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#b8bbc0"
                              android:textSize="12sp"
                              android:textStyle="normal"
                              android:text="АДРЕС САЙТА"
                              android:layout_marginTop="8dp"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#333"
                              android:textSize="16sp"
                              android:textStyle="normal"
                              android:text="http://sovenok.ru"
                              android:layout_marginTop="0dp"
                              android:id="@+id/webInfo"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_marginTop="8dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#b8bbc0"
                              android:textSize="12sp"
                              android:textStyle="normal"
                              android:text="ГРАФИК РАБОТЫ"
                              android:layout_marginTop="8dp"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#333"
                              android:textSize="16sp"
                              android:textStyle="normal"
                              android:text="С 9:00 до 21:00"
                              android:layout_marginTop="0dp"
                              android:id="@+id/timeInfo"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_marginTop="8dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textColor="#b8bbc0"
                              android:textSize="12sp"
                              android:textStyle="normal"
                              android:text="ОПЕРАТОР"
                              android:layout_marginTop="8dp"/>
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_marginTop="0dp">
                        <TextView android:layout_width="0dp"
                                  android:layout_weight="1"
                                  android:layout_height="wrap_content"
                                  android:textColor="#333"
                                  android:textSize="16sp"
                                  android:textStyle="normal"
                                  android:text="Мобильные ТелеСистемы"
                                  android:id="@+id/providerInfo"/>
                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:scaleType="fitCenter"
                                   android:adjustViewBounds="true"
                                   android:src="@drawable/mts_logo_sample"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:background="@drawable/background_rate"
                     android:padding="12dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <FrameLayout android:layout_width="90dp"
                             android:layout_height="wrap_content"
                             android:clickable="true"
                             android:id="@+id/thumbDownButton"
                             android:background="@drawable/rate_button_state"
                             android:padding="5dp">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_gravity="center">
                        <ImageView android:layout_height="20dp"
                                   android:layout_width="wrap_content"
                                   android:scaleType="fitCenter"
                                   android:adjustViewBounds="true"
                                   android:src="@drawable/ic_thumb_down"
                                   android:layout_gravity="center_horizontal"/>
                        <TextView android:text="Информация неверна"
                                  android:textColor="#697384"
                                  android:textSize="12sp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center_horizontal"
                                  android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </FrameLayout>
                <FrameLayout android:layout_width="0dp"
                             android:layout_height="match_parent"
                             android:layout_weight="1">

                </FrameLayout>
                <FrameLayout android:layout_width="90dp"
                             android:layout_height="wrap_content"
                             android:clickable="true"
                             android:id="@+id/thumbUpButton"
                             android:background="@drawable/rate_button_state"
                             android:padding="5dp">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:orientation="vertical"
                                  android:layout_gravity="center">
                        <ImageView android:layout_height="20dp"
                                   android:layout_width="wrap_content"
                                   android:scaleType="fitCenter"
                                   android:adjustViewBounds="true"
                                   android:src="@drawable/ic_thumb_up"
                                   android:layout_gravity="center_horizontal"/>
                        <TextView android:text="Всё верно и полезно!"
                                  android:textColor="#697384"
                                  android:textSize="12sp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:gravity="center_horizontal"
                                  android:layout_marginTop="5dp"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Комментарии пользователей"
                  android:textColor="#697384"
                  android:textSize="20sp"
                  android:layout_gravity="center"
                  android:layout_marginTop="12dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginTop="8dp">
            <ImageView android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:scaleType="fitCenter"
                       android:adjustViewBounds="true"
                       android:background="@drawable/comment_avatar"
                       android:id="@+id/userAvatar"
                       android:layout_gravity="top|left"/>
            <FrameLayout android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content"
                         android:background="@drawable/comment_background"
                         android:paddingLeft="20dp"
                         android:paddingRight="10dp"
                         android:paddingTop="8dp"
                         android:paddingBottom="8dp">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <EditText android:id="@+id/userNameInput"
                              android:inputType="text"
                              android:layout_height="48dp"
                              android:layout_width="match_parent"
                              android:paddingTop="8dp"
                              android:paddingBottom="8dp"
                              android:paddingLeft="8dp"
                              android:textColorHint="#d4dae4"
                              android:singleLine="true"
                              android:textColor="#133CAC"
                              android:textSize="16sp"
                              android:hint="Представьтесь"
                              android:background="@drawable/number_input_background"/>
                    <EditText android:id="@+id/userNameInput"
                              android:inputType="textMultiLine"
                              android:layout_height="48dp"
                              android:layout_width="match_parent"
                              android:paddingTop="8dp"
                              android:paddingBottom="8dp"
                              android:paddingLeft="8dp"
                              android:textColorHint="#d4dae4"
                              android:singleLine="true"
                              android:textColor="#133CAC"
                              android:textSize="16sp"
                              android:hint="Напишите комментарий"
                              android:background="@drawable/number_input_background"/>
                    <FrameLayout android:id="@+id/showMapButton"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:clickable="true"
                                 android:background="@drawable/share_button_state"
                                 android:layout_marginTop="8dp">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:layout_gravity="center">
                            <ImageView android:src="@drawable/ic_add_comment"
                                       android:layout_width="wrap_content"
                                       android:layout_height="match_parent"
                                       android:scaleType="fitCenter"
                                       android:adjustViewBounds="true"
                                       android:layout_gravity="center"/>
                            <TextView android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:id="@+id/searchNumber"
                                      android:textColor="#697384"
                                      android:textSize="14sp"
                                      android:textStyle="normal"
                                      android:text="Отправить комментарий"
                                      android:layout_gravity="center"
                                      android:layout_marginLeft="3dp"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
