<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="8dp">
<TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#b8bbc0"
          android:textSize="12sp"
          android:textStyle="normal"
          android:text="АДРЕС"
          android:layout_marginTop="8dp"
          android:id="@+id/infoTitle"/>
<TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#333"
          android:textSize="16sp"
          android:textStyle="normal"
          android:text="223423, Россия, Москва, ул. Шоссе Энтузиастов, д.34, стр.2, корп.4, кв.5"
          android:layout_marginTop="0dp"
          android:id="@+id/infoEntry"/>
<FrameLayout android:id="@+id/showMapButton"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:clickable="true"
             android:background="@drawable/share_button_state"
             android:layout_marginTop="8dp">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_gravity="center">
        <ImageView android:src="@drawable/ic_pin"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:scaleType="fitCenter"
                   android:adjustViewBounds="true"
                   android:layout_gravity="center"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#697384"
                  android:textSize="16sp"
                  android:textStyle="normal"
                  android:text="Показать на карте"
                  android:layout_gravity="center"
                  android:layout_marginLeft="3dp"/>
    </LinearLayout>
</FrameLayout>
</LinearLayout>