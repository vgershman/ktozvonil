<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="8dp">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#b8bbc0"
              android:textSize="12sp"
              android:textStyle="normal"
              android:text="ВЛАДЕЛЕЦ НОМЕРА"
              android:layout_marginTop="8dp"
              android:id="@+id/infoTitle"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#333"
              android:textSize="16sp"
              android:textStyle="normal"
              android:text="ТЦ 'Совенок на водном идите все нафиг'"
              android:layout_marginTop="0dp"
              android:id="@+id/infoEntry"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#697384"
              android:textSize="12sp"
              android:textStyle="normal"
              android:text="Детские магазины, Магазины обуви"
              android:layout_marginTop="0dp"
              android:id="@+id/infoType"/>
</LinearLayout>